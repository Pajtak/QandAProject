<%- include ('partials/header.ejs') %>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <hr />
    <h1><%= question.title %></h1>
    <br />
    <p><%= question.description %></p>
    <hr />

    <form action="/answer" method="POST">
      <label for="answerBody">Resposta</label>
      <textarea
        name="answerBody"
        id=""
        cols="30"
        rows="10"
        placeholder="Digite sua resposta"
        class="form-control"
      ></textarea>
      <input type="hidden" value="<%= question.id %>" name="answer" />
      <br />
      <button type="submit" class="btn btn-success">Responder</button>
    </form>

    <hr />

    <h3>Respostas</h3>

    <hr />

    <% answer.forEach((answer) => { %>
    <br />
    <div class="card">
      <div class="card-body"><p><%= answer.body %></p></div>
    </div>
    <%}) %>
  </div>
</body>
<%- include ('partials/footer.ejs') %>
